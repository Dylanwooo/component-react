
.jd-input-wrapper
  position: relative;
  display: inline-block;
  width: 100%;

.jd-input
  position: relative;
  display: inline-block;
  padding: 1px;
  height: 32px;
  width: 100%;
  line-height:1.5;
  color: #d9d9d9;
  background-color: #ffffff;
  background-image: none;
  border-radius: 4px;

  &:hover {
    border: 1px solid #999999;
  }
  &:focus {
    border: 1px solid #5BB4FB
  }

.jd-input-suffix
  display: table-cell








