
.jd-input-wrapper
  position: relative;
  width: 100%;
  margin: 5px;

.jd-input
  position: relative;
  background: #fff;
  display: inline-block;
  height: 20px;
  cursor: text;
  padding: 6px 11px;
  border: 1px solid #d9d9d9;
  border-radius: 4px;
  width: 100%;
  line-height: 1.5px;
  font-size: 14px;
  transition: all .3s;
  font-family: PingFangSC-Regular;

  &:hover
    border-color: #999999
    transition: all .3s;

  &:focus
    border-color: #5BB4FB
    transition: all .3s;

.jd-input-wrapper__not-editable
  .jd-input
    cursor: not-allowed
    background: #EDEDED
    border-color: #d9d9d9


.jd-input-suffix
  display: inline-block;
  top: 30%;
  position: absolute;
  -ms-transform: translateY(-50%);
  z-index: 2;
  line-height: 0;
  left: 220px;     /*使用变量偏移*/

.jd-icon-search
    cursor: pointer
    &:hover
      color: #999999

textarea
  max-width: 100%;
  height: auto;
  vertical-align: bottom;
  transition: all .2s, height 0s;
  border-radius 4px;
  border: 1px solid #d9d9d9;
  font-family: PingFangSC-Regular;
  padding: 6px 11px;
  font-size: 14px;












