@import "common/var.styl";

.{$jd-prefix}-modal
    -webkit-animation-duration: 0.5s
    -moz-animation-duration: 0.5s
    position relative
    z-index 1000

.{$jd-prefix}-modal__wrap
    position: fixed;
    overflow: auto;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 9998;
    outline: 0;
    display flex
    align-items center
    justify-content center

.{$jd-prefix}-content
    position: relative;
    background-color: #ffffff;
    border: none;
    border-radius: 6px 6px;
    background-clip: padding-box;

.{$jd-prefix}-content__header
    padding: 13px 20px 14px 20px;
    border-radius: 5px 5px 0 0;
    background: #fff;
    color: #666;
    border-bottom: 1px solid #e9e9e9;
    min-height 35px

.{$jd-prefix}-content__title
    margin: 0;
    font-size: 14px;
    line-height: 21px;
    font-weight: bold; 
            
.{$jd-prefix}-content__close
    position absolute
    right 20px
    top 13px
    color #000
    opacity 0.3
    cursor pointer

    &:hover
        opacity: 1;
        text-decoration: none;
     
.{$jd-prefix}-content__body
    padding:16px;
    overflow: auto;
    font-size: 12px;
        





