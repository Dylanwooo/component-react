.jd-switch-default
  height: 22px;
  line-height: 12px;
  width: 44px;
  border-radius: 50px;

  &:after
    width: 18px;
    height: 18px;
    top: 1px;
    left: 2px;

  .jd-switch-inner
    font-size: 12px;
    left: 25px;
    top: 5px;

  &.jd-switch-checked
    &:after
      left: 21px;

    .jd-switch-inner
      font-size: 12px;

.jd-switch-small
  width: 28px;
  height: 14px;
  line-height: 12px;

  &:after
    width: 12px;
    height: 12px;
    top: 0px;
    left: 1px;

  .jd-switch-inner
    display: none;

  &.jd-switch-checked:after
    left: 14px;


