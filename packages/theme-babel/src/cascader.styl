.jd-cascader__content
  position absolute
  z-index 10000
  font-size 12px
  line-height 1.5
  padding-bottom 8px

  animation-duration .3s

.jd-cascader--hidden
  opacity 0
  left: -1000px

.jd-cascader-picker
  position: relative;
  display: inline-block;
  cursor: pointer;
  font-size: 12px;
  background-color: #fff;
  border-radius: 4px;
  outline: 0;
  width 50%

  &__label
    position: absolute;
    left: 0;
    height: 20px;
    line-height: 20px;
    top: 50%;
    margin-top: -10px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    width: 100%;
    padding: 0 20px 0 8px;

  &__input
    position: relative;
    z-index 2
    display block
    padding: 4px 7px;
    width 100%
    height: 28px;
    cursor: pointer;
    font-size: 12px;
    line-height: 1.5;
    color: rgba(0, 0, 0, .65);
    background-color: transparent !important;
    background-image: none;
    border: 1px solid #d9d9d9;

    &:hover + .cascader-picker--clear
      opacity 1

  &--clear
    opacity: 0;
    position: absolute;
    right: 8px;
    z-index: 2;
    background: #fff;
    top: 50%;
    font-size: 12px;
    color: rgba(0, 0, 0, .25);
    width: 12px;
    height: 12px;
    margin-top: -6px;
    line-height: 12px;
    cursor: pointer;
    transition: color .3s ease, opacity .15s ease;

    &:hover
      color rgba(0, 0, 0, .43)
      opacity 1

  &--arrow
    position: absolute;
    z-index: 1;
    top: 50%;
    right: 8px;
    width: 12px;
    height: 12px;
    margin-top: -6px;
    line-height: 12px;
    color: rgba(0, 0, 0, .43);
    display: inline-block;
    zoom 1
    filter: none;
    font-size: 12px;

.jd-cascader-menus
  font-size: 12px;
  background: #fff;

  border-radius: 4px;
  box-shadow: 0 1px 6px rgba(0, 0, 0, .2);
  white-space: nowrap;

  .jd-cascader-menu
    display: inline-block;
    vertical-align: top;
    min-width: 111px;
    height: 180px;
    list-style: none;
    margin: 0;
    padding: 0;
    border-right: 1px solid #e9e9e9;
    overflow: auto;

    &__item
      position relative
      padding: 7px 8px;
      cursor: pointer;
      white-space: nowrap;
      -webkit-transition: all .3s;
      transition: all .3s;

      &--active
        background: #f7f7f7;
        font-weight: 700;

      &:hover
        background #ecf6fd

      &--expand
        &:after
          font-family: anticon;
          content ">"
          position absolute
          zoom: 1;
          color: rgba(0, 0, 0, .6)
          right 8px

      &--loading
        i
          position: absolute;
          right: 8px;
          top 10px
          color: #aaa;

      &--disabled
        cursor: not-allowed;
        color: #ccc;

        &:hover
          background: transparent;
                
           
                    
