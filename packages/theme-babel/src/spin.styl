@import "common/var.styl";
@import "mixins/mixins.styl";

.spin
    color $primaryColor 
    vertical-align: middle;
    text-align: center;
    opacity: 0;
    font-size: 12px;
    display: none;
    position fixed 
    right 0 
    top 0
    left 0
    bottom 0
    z-index 10000

    &__spinning
        opacity: 1;
        display inline-block
    
    &__img-wrap
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        z-index 9996

    &__img
        margin-bottom 3px

    &__text--small
        transform: scale(0.833333)


.spin-nest 
    position relative

    .spin
        position absolute
        height: 100%;
        width: 100%;
        max-height 320px
        z-index: 4;

        &__blur
            overflow: hidden;
            opacity: .7;
            filter: blur(.5px);
    
        &__container
            position relative

