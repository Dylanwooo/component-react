@import "common/var.styl";

.{$jd-prefix}-popconfirm__content
    position absolute
    z-index 10000
    font-size 12px
    line-height 1.5
    animation-duration 0.3s

    &--left
    &--leftTop
    &--leftBottom
        padding-right 8px
    
    &--top
    &--topLeft
    &--topRight
        padding-bottom 8px
    
    &--bottom 
    &--bottomLeft
    &--bottomRight
        padding-top 8px
    
    &--right
    &--rightTop
    &--rightBottom
        padding-left 8px

.{$jd-prefix}-popconfirm--hidden
    opacity 0
    left: -1000px

.{$jd-prefix}-popconfirm__arrow
    position absolute
    width 0
    height 0
    border-color transparent
    border-style solid

    &--top
    &--topLeft
    &--topRight
        bottom 3px
        border-width 5px 5px 0
        border-top-color #fff
        
    &--top
        left 50%
        margin-left -5px

    &--topLeft
        left 16px
    
    &--topRight
        right 16px

    &--left
    &--leftTop
    &--leftBottom
        right 3px
        border-width 5px 0 5px 5px
        border-left-color #fff
    
    &--left
        top 50%
        margin-top -5px
    
    &--leftTop
        top 8px
    
    &--leftBottom
        bottom 8px
    
    &--bottom 
    &--bottomLeft
    &--bottomRight
        top 3px
        border-width 0 5px 5px
        border-bottom-color #fff
    
    &--bottom
        left 50%
        margin-left -5px
    
    &--bottomLeft
        left 16px
    
    &--bottomRight
        right 16px
    
    &--right
    &--rightTop
    &--rightBottom
        left 3px
        border-width 5px 5px 5px 0
        border-right-color #fff

    &--right
        top 50%
        margin-top -5px
    
    &--rightTop
        top 8px
    
    &--rightBottom
        bottom 8px

.{$jd-prefix}-popconfirm__inner
    min-width 144px
    max-width 300px
    color #fff
    text-align left
    background-color #fff
    border-radius 4px
    box-shadow 0 1px 6px rgba(0,0,0,.2)

.{$jd-prefix}-confirm__content
    padding 8px 16px
    color rgba(0,0,0,.65)

.{$jd-prefix}-confirm__icon
    position absolute
    color #ffbf00
    font-size 16px


.{$jd-prefix}-confirm__innerMessage
    padding 8px 0 16px
    font-size 12px
    color rgba(0,0,0,.85)
    min-height 30px
    display flex

.{$jd-prefix}-confirm__msg
    padding-left 20px


.{$jd-prefix}-confirm__footer
    text-align right
