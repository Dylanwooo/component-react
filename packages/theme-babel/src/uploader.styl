.file-upload
  margin-bottom 10px;
  &__label
    background-color #13d0a2
    color #fff
    line-height 1.5
    padding 2px 5px 2px 10px
    display inline-block
    width 70px
    text-align center
    letter-spacing 5px
    box-sizing border-box

  &__form
    display none
    opacity 0
    width 0px
    height 0px

  &__input
    position absolute
    top 0
    left 0
    width 0px
    height 0px
