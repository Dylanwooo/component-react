@import "common/var.styl";
@import "mixins/mixins.styl";

.{$jd-prefix}-button
  display inline-block
  padding 3px 10px
  background $normal-white
  border 1px solid #ddd
  cursor pointer
  height $component-height-base
  width $btn-width-base
  border-radius $border-radius-base
  font-size $font-size-base
  font-family $font-family
  letter-spacing 1px
  color $normal-2

  + .{$jd-prefix}-button
    margin-left 10px

  &--primary
    background $primary-normal
    border none
    width auto
    border-bottom 1px solid darken($primary-normal, 10%)
    color $normal-white
    &:hover
      background $primary-hover

  &--danger
    width auto
    color $normal-white
    background $error-color
    border none
    outline none

  &--success
    width auto
    color $normal-white
    background $success-color
    border none
    outline none

  &--small
    width auto
    font-size $font-size-xs
    height $component-height-sm

  &--large
    width auto
    font-size $font-size-base
    height $component-height-lg

.{$jd-prefix}-button--default
  &:hover
    transition: all .3s;
    border-color $primary-normal
    color $primary-normal
  &:focus
    transition: all .3s;
    color $primary-click
    border-color $primary-click


.{$jd-prefix}-button--disabled
  cursor not-allowed
  color $normal-4 !important
  background-color $btn-background-disabled !important
  border 1px solid $btn-border-disabled !important
