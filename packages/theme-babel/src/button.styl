@import "common/var.styl";
@import "mixins/mixins.styl";


.{$jd-prefix}-button
  display inline-block
  padding 5px 10px
  background $btn-background-disabled
  border 1px solid $border-color-base
  cursor pointer
  height $component-height-sm
  min-width $btn-width-base
  border-radius $border-radius-base
  font-size $font-size-xs
  font-family $font-family
  letter-spacing 1px
  line-height $line-height-base
  color $normal-2


  + .{$jd-prefix}-button
    margin-left 10px

  &--primary
    background $primary-normal
    border none
    outline none
    width auto
    border-bottom 1px solid darken($primary-normal, 10%)
    color $normal-white

    .{$jd-prefix}-icon
      color $normal-white

    &:hover
      background $primary-hover

  &--ghost
    background transparent
    background $normal-white
    border 1px solid $border-color-base

    &:hover
      transition: all .3s;
      border-color $primary-normal
      color $primary-normal
      .{$jd-prefix}-icon
        color $primary-hover

    &:focus
      transition: all .3s;
      color $primary-click
      border-color $primary-click
      .{$jd-prefix}-icon
        color $primary-click

  &--danger
    width auto
    color $normal-white
    background $error-color
    border none
    outline none

  &--success
    width auto
    color $normal-white
    background $success-color
    border none
    outline none

  &--medium
    width auto
    font-size $font-size-base
    height $component-height-base

  &--large
    width auto
    font-size $font-size-base
    height $component-height-lg

.{$jd-prefix}-button--default
  &:hover
    transition: all .3s;
    border-color $primary-normal
    color $primary-normal
  &:focus
    transition: all .3s;
    color $primary-click
    border-color $primary-click


.{$jd-prefix}-button--disabled
  cursor not-allowed
  color $normal-4 !important
  background-color $btn-background-disabled !important
  border 1px solid $btn-border-disabled !important

  .{$jd-prefix}-icon
    color $normal-4 !important


.{$jd-prefix}-button--default
  width auto
  min-width $btn-width-base
  &:hover
    background $normal-white
    .{$jd-prefix}-icon
      color $primary-hover

  &:focus
    .{$jd-prefix}-icon
      color $primary-click


.{$jd-prefix}-icon
  margin-right 9px
  color $normal-3

