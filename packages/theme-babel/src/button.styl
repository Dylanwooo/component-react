@import "common/var.styl";
@import "mixins/mixins.styl";

.{$jd-prefix}-button
  display inline-block
  padding 3px 10px
  background #fff
  border 1px solid #ddd
  border-bottom-color darken(#ddd, 10%)
  cursor pointer
  border-radius 3px
  font-size 14px
  letter-spacing 1px
  color #555

    &:hover
      transform translate(0, -1px);

  + .{$jd-prefix}-button
    margin-left 10px

  &--primary
    background $primaryColor
    border none
    border-bottom 1px solid darken($primaryColor, 10%)
    color #fff

  &--small
    font-size 12px

  &--large
    font-size 16px

  &--disabled
    cursor not-allowed
    color: rgba(0, 0, 0, .25);
    background-color: #f7f7f7;
    border 1px solid #d9d9d9
