@import "common/var.styl";

.{$jd-prefix}-notification
    position fixed
    z-index 10000
    width 335px

    &--bottomLeft
    &--topLeft
        margin-left 24px
    
    &--bottomRight
    &--topRight
        margin-right 24px
   
.{$jd-prefix}-notification__notice
    padding 16px
    box-shadow 0 2px 8px rgba(0,0,0,.2)
    background #fff
    position relative
    margin-bottom 10px
    overflow hidden
    line-height 1.5
    animation-duration 0.2s

.{$jd-prefix}-notification__header
    padding-right 24px
    font-family $font-family
    font-size $font-size-base
    color rgba(0,0,0,.85)
    margin-bottom 4px
    line-height 20px

.{$jd-prefix}-notification__msg
    font-size $font-size-xs
    padding-right 20px
    color rgba(0,0,0,.65)
    word-wrap break-word
    font-family $font-family

.{$jd-prefix}-notification__footer
    text-align right

.{$jd-prefix}-notification__content--icon
    padding-left 48px

.{$jd-prefix}-notification__close
    position absolute
    right 16px
    top 10px
    color black
    opacity 0.3
    cursor pointer
    transform opacity .4 ease
    
    &:hover
        opacity 0.6

.{$jd-prefix}-notification__icon--info
    position absolute
    left 16px
    color #108ee9

.{$jd-prefix}-notification__icon--success
    position absolute
    left 16px
    color #00a854

.{$jd-prefix}-notification__icon--warning
    position absolute
    left 16px
    color #ffbf00

.{$jd-prefix}-notification__icon--error
    position absolute
    left 16px
    color #f04134