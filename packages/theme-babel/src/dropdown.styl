
.jd-dropdown__content
  position absolute
  z-index 10000
  font-size 12px
  line-height 1.5
  padding-bottom 8px

  animation-duration .3s

.jd-dropdown--hidden
  opacity 0
  left -1000px

.jd-dropdown-picker
  position relative
  display inline-block
  cursor pointer
  box-sizing border-box
  font-size $font-size-xs
  background-color #fff
  border-radius $border-radius-base
  outline 0
  height $component-height-base
  width 140px


  &__label
    position absolute
    left 0
    height 20px
    line-height 20px
    font-family $font-family
    top 50%
    font-size $font-size-sm
    margin-top -10px
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    width 90%
    padding 0 20px 0 8px

  &__input
    position relative
    z-index 2
    display block
    padding $input-padding-horizontal-base $input-padding-vertical-base
    width 100%
    height 100%
    box-sizing border-box
    cursor pointer
    border-radius $border-radius-base
    font-size $font-size-sm
    line-height 1.5
    color rgba(0, 0, 0, .65)
    background-color transparent !important
    background-image none
    border 1px solid #d9d9d9

    &:hover + .dropdown-picker--clear
      opacity 1

    &:hover
      border-color $border-color-hover

    &:focus
      border-color $border-color-focus
      -webkit-box-shadow 0 0 0 2px rgba(91, 180, 251, 0.1)
      box-shadow 0 0 0 2px rgba(91, 180, 251, 0.1)
      transition all .3s

  &--clear
    opacity 0
    position absolute
    right 8px
    z-index 2
    background #fff
    top 50%
    font-size 12px
    color rgba(0, 0, 0, .25)
    width 12px
    height 12px
    margin-top -6px
    line-height 12px
    cursor pointer
    transition color .3s ease, opacity .15s ease

    &:hover
      color rgba(0, 0, 0, .43)
      opacity 1

  &--arrow
    position absolute
    z-index 1
    top 50%
    right 8px
    width 12px
    height 12px
    margin-top -6px
    line-height 12px
    color rgba(0, 0, 0, .43)
    display inline-block
    zoom 1
    filter none
    font-size 12px

.jd-dropdown-menus
  font-size 12px
  background #fff
  width auto
  border-radius 4px
  box-shadow 0 1px 6px rgba(0, 0, 0, .2)
  white-space nowrap

  .jd-dropdown-menu
    display inline-block
    vertical-align top
    min-width 111px
    height auto
    list-style none
    margin 0
    width 100%
    padding 0
    border-right 1px solid #e9e9e9
    overflow auto


    &__item
      position relative
      padding 7px 8px
      cursor pointer
      font-size $font-size-xs
      color $normal-2
      font-family $font-family
      white-space nowrap
      -webkit-transition all .3s
      transition all .3s

      &--active
        background #ededed

      &:hover
        background #ededed

      &--expand
        &:after
          font-family $font-family
          content ">"
          position absolute
          zoom 1
          right 8px

      &--icon
        i
          position absolute
          left 8px
          top 10px

      &--disabled
        cursor not-allowed
        color $normal-4

        &hover
          background transparent

      &--icon
        padding 7px 8px 7px 31px;

