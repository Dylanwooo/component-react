@import "common/var.styl";
@import "mixins/mixins.styl";

.{$jd-prefix}-alert
    position relative
    padding 8px 46px
    word-wrap: break-word
    border 1px solid #d2eafb
    background-color #ecf6fd
    animation-duration: 0.6s
    box-sizing border-box
    height auto
    border-radius $border-radius-base

.{$jd-prefix}-alert--info
    border 1px solid #CAE2FF
    background-color #E2EEF9
    color $primary-normal

.{$jd-prefix}-alert--success
    border 1px solid #D4F6E3
    background-color #EEFCF4
    color $success-color

.{$jd-prefix}-alert--warning
    border 1px solid #F6E9C9
    background-color #FFF6E6
    color $warning-color

.{$jd-prefix}-alert--error
    border 1px solid #FFD5D5
    background-color #FFF3F3
    color $error-color

.{$jd-prefix}-alert__icon
    position absolute
    left 16px
    top 10px

.{$jd-prefix}-alert__close
    position absolute
    right 20px
    top 12px
    font-size $font-size-alert-close
    text-align center
    cursor: pointer
    color #666666
    opacity 1.0
    transform opacity .4 ease

    &:hover
        opacity 0.6


.{$jd-prefix}-alert__msg
    font-size 14px
    color #666666
    font-family $font-family
    line-height 20px
    letter-spacing 0

.{$jd-prefix}-alert__description
    font-size 12px
    color #666666

