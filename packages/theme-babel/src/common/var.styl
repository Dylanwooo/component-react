// The prefix to use on all css classes for jdesign.
$jd-prefix = jd

// -------- 重要色 -----------
$primary-normal = #209CFF
$primary-hover = #5BB5FC
$primary-click = #0E84E1

// -------- 中性色 -----------
$normal-1 = #252525 //重要-标题
$normal-2 = #666666 //一般-正文
$normal-3 = #999999 //弱-提示文字
$normal-4 = #CCCCCC //失效-字体
$normal-5 = #EDEDED //分割线
$normal-6 = #F7F7F7 //失效-Button背景
$normal-7 = #F8F8F9 //背景-底色、分割
$normal-white = #FFFFFF //白色

// -------- 释义颜色 -----------
$info-color = #20A0FF
$success-color = #13CE66
$error-color = #FF4949
$warning-color = #F7BA2A

// -------- 字体颜色 -----------
$font-size-xsm-color = #252525 //辅助文字
$font-size-sm-color = #252525 //常规正文（小）
$font-size-base-color = #252525 //主要正文
$font-size-lg-color = #666666 //一般性小标题
$font-size-xlg-color = #666666 //一般标题
$font-size-xxlg-color = #999999 //主要标题

//font cdn source
$font-url = "http://h5.360buyimg.com/act/jdesign-fonts"

// -------- 基础大小 -----------
$size-base = 14px

// -------- 设计稿字体 -----------
$font-size-xs = $font-size-base -2px //辅助文字
$font-size-sm = $font-size-base -1px //常规正文（小）
$font-size-base = 14px //主要正文
$font-size-lg = $font-size-base + 2px //一般性小标题
$font-size-xl = $font-size-base + 4px //一般标题
$font-size-xxl = $font-size-base + 6px //主要标题
$font-family-no-number = "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", Helvetica, Arial, sans-serif
$font-family = "Helvetica Neue", "Helvetica", Arial, $font-family-no-number

// Base Scaffolding Variables
$body-background = #fff
$component-background = #fff
$component-background-disabled = #EDEDED
$code-family = Consolas, Menlo, Courier, monospace
$heading-color = fade(#000, 85%)
$text-color = fade(#000, 65%)
$text-color-secondary = fade(#000, 43%)
$heading-color-dark = fade(#fff, 97%)
$text-color-dark = fade(#fff, 91%)
$text-color-secondary-dark = fade(#fff, 67%)
$line-height-base = 1.5
$border-radius-base = 4px
$border-radius-sm = 2px
$border-style-base = 1px solid #D9D9D9
$border-color-base = #D9D9D9
$border-color-hover = #999999
$border-color-focus = #5BB4FB

// -------- input基础样式 -----------
$input-padding-horizontal-base = 6px
$input-padding-vertical-base = 11px

$component-height-base = 32px
$component-height-sm = 28px
$component-height-lg = 36px

//btn
$btn-background-disabled = #f7f7f7
$btn-border-disabled = #ededed
$btn-width-base = 68px;