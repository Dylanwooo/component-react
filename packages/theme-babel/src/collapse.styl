.jd-collapse__item
  border $border-style-base
  border-bottom 0
  background-color $normal-6

  &:last-child
    border-bottom $border-style-base
    border-bottom-left-radius $border-radius-base
    border-bottom-right-radius $border-radius-base
  &:first-child
    border-top-left-radius $border-radius-base
    border-top-right-radius $border-radius-base

  .jd-collapse__header
    display flex
    line-height 22px
    padding 12px 0 12px 40px
    box-sizing border-box
    color rgba(0,0,0,0.85)
    cursor pointer
    font-size $font-size-base
    position relative
    transition all .3s

    &--disabled
      cursor not-allowed
      color: rgba(0, 0, 0, .25);


  .jd-collapse__icon
    margin-right 10px
    line-height 22px
    font-size $font-size-xs
    position absolute
    left 16px

  .jd-collapse__content
    overflow: hidden;
    color: rgba(0, 0, 0, .65);
    padding 0px 16px
    background-color: #fff
    transition all .3s

    &--inactive
      height 0

  .jd-collapse__content-box
    padding 16px 0px
    font-size $font-size-base
