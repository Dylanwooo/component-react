@import "common/var.styl";
@import "mixins/mixins.styl";

.jd-input-wrapper
  position: relative;
  //display: inline-block;
  margin: 5px;

  .jd-input
    position: relative;
    background: #fff;
    box-sizing: border-box;
    display: inline-block;
    cursor: text;
    padding: 6px 11px;
    border: 1px solid #d9d9d9;
    border-radius: 4px;
    height: 32px;
    width: 100%;
    line-height: 1.5px;
    font-size: 14px;
    transition: all .3s;
    font-family: PingFangSC-Regular;

    &--small
      height 28px;

    &--large
      height 36px;

    &:hover
      border-color: #999999
      transition: all .3s;

    &:focus
      border-color: #5BB4FB
      transition: all .3s;
      border-width .5px;

  .jd-input-suffix
    position: absolute;
    top: 50%;
    right: 10px;
    -webkit-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    z-index: 2;
    line-height: 0;
    color: rgba(0, 0, 0, .65);

    .jd-icon-search
      cursor: pointer
      font-size: $font-size-xs px
      &:hover
        color: #999999

  .jd-textarea
    max-width: 100%;
    height: 32px;
    vertical-align: middle;
    transition: all .2s, height 0s;
    border-radius 4px;
    border: 1px solid #d9d9d9;
    font-family: PingFangSC-Regular;
    padding: 6px 11px;
    font-size: 14px;
    box-sizing border-box

.jd-input-wrapper__not-editable
  .jd-input
    cursor: not-allowed
    background: #EDEDED
    border-color: #d9d9d9

    &:hover
      border-color: #d9d9d9

