@import "common/var.styl";
@import "mixins/mixins.styl";

.{$jd-prefix}-input-wrapper
  position: relative;
  margin: 5px;
  display inline-block

  .{$jd-prefix}-input
    position: relative;
    background: $body-background;
    box-sizing: border-box;
    display: inline-block;
    cursor: text;
    padding: $input-padding-horizontal-base $input-padding-vertical-base;
    border: $border-style-base;
    border-radius: $border-radius-base;
    height: $component-height-base;
    width: 100%;
    line-height: $line-height-base;
    font-size: $font-size-base;
    transition: all .3s;
    font-family: $font-family;

    &--small
      height $component-height-sm;

    &--large
      height $component-height-lg;

    &:hover
      border-color: $border-color-hover
      transition: all .3s;

    &:focus
      border-color: $border-color-focus
      -webkit-box-shadow: 0 0 0 2px rgba(91, 180, 251, 0.1);
      box-shadow: 0 0 0 2px rgba(91, 180, 251, 0.1);
      transition: all .3s;

  .{$jd-prefix}-input-suffix
    position: absolute;
    top: 50%;
    right: $input-padding-horizontal-base;
    -webkit-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    z-index: 2;
    line-height: 0;
    color: rgba(0, 0, 0, .65);

    .{$jd-prefix}-icon-search
      cursor: pointer
      font-size: $font-size-xs
      &:hover
        color: $border-color-hover

  .{$jd-prefix}-textarea
    max-width: 100%;
    height: $component-height-base;
    vertical-align: middle;
    transition: all .2s, height 0s;
    border-radius $border-radius-base;
    border: $border-style-base;
    font-family: $font-family;
    padding: $input-padding-horizontal-base $input-padding-vertical-base;
    font-size: $font-size-base;
    box-sizing border-box

    &:hover
      border-color: $border-color-hover
      transition: all .3s;

    &:focus
      border-color: $border-color-focus
      -webkit-box-shadow: 0 0 0 2px rgba(91, 180, 251, 0.1);
      box-shadow: 0 0 0 2px rgba(91, 180, 251, 0.1);
      transition: all .3s;


.{$jd-prefix}-input-wrapper__not-editable
  .{$jd-prefix}-input
    cursor: not-allowed
    background: $component-background-disabled
    border-color: $border-color-base

    &:hover
      border-color: $border-color-base

    &:focus
      border-color: $border-color-base

textarea
  &:focus
    outline 0
input
  &:focus
    outline 0