@import "common/var.styl";
@import "mixins/mixins.styl";

.{$jd-prefix}-messages
    position: fixed;
    z-index 10000
    left 50%
    transform translateX(-50%)
    border-radius $border-radius-base
    
.{$jd-prefix}-messages--animated
  
    margin-bottom: 10px;
    animation-duration: 0.3s
    color rgba(0,0,0,.85)
    text-align center

.{$jd-prefix}-messages__header
    min-height 13px

.{$jd-prefix}-messages__close
    position absolute
    right 10px
    top 3px
    cursor: pointer
    color black
    opacity 0.3
    transform opacity .4 ease

    &:hover
        opacity 0.6
    
.{$jd-prefix}-messages__msg
    padding 10px
    font-size $font-size-base
    text-align center
    font-family $font-family
    background #fff
    display inline-block
    word-wrap: break-word;
    box-shadow 0 2px 8px rgba(0,0,0,0.2)


.{$jd-prefix}-messages__icon--info
    margin-right 10px
    color $primary-normal

.{$jd-prefix}-messages__icon--success
    margin-right 10px
    color $success-color

.{$jd-prefix}-messages__icon--warning
    margin-right 10px
    color $warning-color
    font-size 12px

.{$jd-prefix}-messages__icon--error
    margin-right 10px
    color $error-color

.{$jd-prefix}-messages__icon--loading
    margin-right 10px
    color $primary-normal