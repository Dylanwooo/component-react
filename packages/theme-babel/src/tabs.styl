@import "common/var.styl";
@import "mixins/mixins.styl";

.{$jd-prefix}-tabbar
  display flex
  justify-content: center;

.{$jd-prefix}-tabbar__item
  display inline-block
  padding 6px 30px
  min-width 100px
  cursor pointer
  background white
  text-align center

  &:not(:first-child)
    border-left none

  &--active
    background $primary-normal
    color white

.{$jd-prefix}-tab-pane
  display none

  &--active
    display block
