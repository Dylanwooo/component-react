@import "common/var.styl";
@import "mixins/mixins.styl";

.{$jd-prefix}-tabbar
  display flex
  justify-content left

.{$jd-prefix}-tabbar__item
  display inline-block
  padding 6px 30px
  font-size $font-size-base
  min-width 100px
  cursor pointer
  background $normal-white
  text-align center

  &:hover
    color $primary-normal

  &:not(:first-child)
    border-left none

  &--active
    transition all .3s  $ease-in-out
    background $primary-normal
    color $normal-white
    font-weight 500

    &:hover
      color $normal-white

.{$jd-prefix}-tabbar__card
  display inline-block
  padding 10px 18px
  margin-right 2px
  font-size $font-size-base
  cursor pointer
  background $normal-white
  border 1px solid $border-color-base
  text-align center
  box-sizing border-box

  &:hover
    color $primary-normal
    border 1px solid $primary-normal

  &--active
    transition all .3s  $ease-in-out
    background $primary-normal
    color $normal-white
    font-weight 500
    border 1px solid $primary-normal

    &:hover
      color $normal-white


.{$jd-prefix}-tab-pane
  display none

  &--active
    display block
    transition: opacity .45s;
