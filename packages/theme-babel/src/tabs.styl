@import "common/var.styl";
@import "mixins/mixins.styl";

.tabbar
  display flex
  justify-content: center;

.tabbar__item
  display inline-block
  padding 6px 30px
  min-width 100px
  cursor pointer
  background white
  text-align center

  &:not(:first-child)
    border-left none

  &--active
    background $primaryColor
    color white

.tab-pane
  display none

  &--active
    display block
