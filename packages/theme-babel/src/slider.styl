@import "common/var.styl";
@import "mixins/mixins.styl";

.slider
    position relative
    margin 10px 6px
    height 12px
    border-radius 5px
    background-color #e9e9e9
    cursor pointer 
    border-top 4px solid #fff
    border-bottom 4px solid #fff
    z-index 1
  

.slider:hover .slider__track
    background-color $primaryColor

.slider__track
    left 0%
    position absolute
    height 4px
    border-radius 4px
    background-color darken($primaryColor, -30%)
    transition background-color 0.3s ease

.slider__handle
    position absolute
    margin-left -7px
    margin-top -5px
    width 14px
    height 14px
    cursor pointer
    border-radius 50%
    border 2px solid darken($primaryColor, -30%)
    border-color darken($primaryColor, -30%)
    background-color #fff
    transition border-color .3s ease
    transform-origin center center

    &:hover
        transform scale(1.2)
        border-color $primaryColor

.slider-step 
    position: absolute;
    width: 100%;
    height: 4px;
    background: transparent;
  

.slider__dot 
    position: absolute;
    bottom: -2px;
    margin-left: -4px;
    width: 8px;
    height: 8px;
    border: 2px solid #e9e9e9;
    background-color: #fff;
    cursor: pointer;
    border-radius: 50%;
    vertical-align: middle;
    &:first-child 
      margin-left: -4px;
    
    &:last-child 
      margin-left: -4px;
    
    &--active 
      border-color: $primaryColor
    
.slider__mark
    position: absolute;
    top: 18px;
    left: 0;
    width: 100%;
    font-size: 12px;


.slider__mark-text
    position: absolute;
    display: inline-block;
    vertical-align: middle;
    text-align: center;
    cursor: pointer;
    color: #999;

    &--active 
      color: #666;
    
  
    
  
