@import "common/var.styl";

.jd-radio-group
  display: inline-block;
  font-size: 14px;

.jd-radio-wrap
  display: inline-block;
  cursor: pointer;
  font-weight: 400;
  font-size: 12px;
  line-height: 14px;
  margin: 0;
  padding: 0;
  margin-right: 15px;
  vertical-align: middle;

  &.jd-radio-disabled
    cursor: not-allowed;

  &:last-child
    margin-right: 0;

.jd-radio
  position: relative;
  display: inline-block;
  white-space: nowrap;
  outline: none;
  vertical-align: middle;
  margin: 0;
  padding: 0;

  input
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    opacity: 0;
    cursor: pointer;

  & + span
    margin-left: 5px;
    margin-right: 5px;
    vertical-align: middle;
    line-height: 14px;

.jd-radio-inner
  position: relative;
  top: 0;
  left: 0;
  display: inline-block;
  width: 14px;
  height: 14px;
  border-radius: 7px;
  border: 1px solid $border-color-base;
  background: $normal-white;
  box-sizing: border-box;
  vertical-align: middle;
  transition: all 0.3s;
  &:hover
  // TODO
    border: 1px solid $primary-normal;
    transition: all .3s;

  &:after
    position: absolute;
    display: block;
    content: ' ';
    top: 3px;
    left: 3px;
    width: 6px;
    height: 6px;
    border-radius: 3px;
    background: $primary-normal;
    transform: scale(0);
    transition: all 0.12s ease-in-out;

.jd-radio-checked
  .jd-radio-inner
    border-color: $primary-normal;
    background: $normal-white;

    &:after
      transform: scale(1);

.jd-radio-disabled
  .jd-radio-inner
    border-color: $border-color-base;
    background: $btn-background-disabled;
    &:after
      background: $border-color-base;

  input[type="radio"]
    cursor: not-allowed;
  

