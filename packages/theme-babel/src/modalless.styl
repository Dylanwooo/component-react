@import "common/var.styl";
@import "mixins/mixins.styl";

.modalless
    position relative
    z-index 1000
    -webkit-animation-duration: 0.5s
    -moz-animation-duration: 0.5s

.modalless__dialog
    position absolute
    top 200px
    left 30%
    transition opacity 0.1s
    opacity 1
    
    &.react-draggable-dragging
        opacity 0.8

.modalless__content
    position: relative;
    background-color: #ffffff;
    border: none;
    background-clip: padding-box;
    box-shadow 6px 6px 12px rgba(0,0,0,0.3)
    border-top-left-radius 3px
    border-top-right-radius 3px

.modalless__header
    padding: 11px 20px;
    background: #fff;
    color: #666;
    cursor move
    background-color $primaryColor
    border-top-left-radius 3px
    border-top-right-radius 3px

.modalless__title
    margin: 0;
    font-size: 14px;
    line-height: 21px;
    font-weight: bold; 
            
.modalless__close
    position absolute
    right 10px
    top 0
    color #000
    opacity 0.3
    cursor pointer

    &:hover
        opacity: 1;
        text-decoration: none;
     
.modalless__body
   
    overflow: auto;
    font-size: 12px;
        





